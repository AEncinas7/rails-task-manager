<h1>My Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= check_box_tag("done", value = "1", checked = task.completed) %><%= link_to task.title, task_path(task) %>
      <%= link_to task_path(task), method: :delete, data: { confirm: "Delete #{task.title}?" } do %> 
        <i class="fas fa-trash-alt"></i> 
      <% end %>
    </li>
  <% end %>
</ul>

<i class="fas fa-plus"></i><%= link_to "Add a new task", new_task_path %>